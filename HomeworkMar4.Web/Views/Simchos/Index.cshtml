@model SimchosViewModel


<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#addSimcha">
                Add Simcha
            </button>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <table class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Contributions</th>
                        <th>Simcha Name</th>
                        <th>Contributor Count</th>
                        <th>Total</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.SimchosInfo)
                    {
                        <tr>
                            <td>
                                <a href="/simchos/contributions?simchaid=@s.Simcha.Id" class="btn btn-outline-info w-100" id="contributions">Contributions</a>
                            </td>
                            <td>@s.Simcha.Name</td>
                            <td>@s.ActiveContributors / @s.ContributorCount</td>
                            <td>@s.Total.ToString("C")</td>
                            <td>@s.Simcha.Date.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<form method="post" action="/simchos/addsimcha">
    <div class="modal fade" id="addSimcha" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">New Simcha</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Simcha Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Simcha Name" />
                    </div>
                    <div class="form-group mt-3">
                        <label class="form-label">Date</label>
                        <input type="date" class="form-control" name="date" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-outline-primary">Add</button>
                </div>
            </div>
        </div>
    </div>
</form>
