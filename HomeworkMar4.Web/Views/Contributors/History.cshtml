@model HistoryViewModel

<h1 style="text-align:center;">History for @Model.Name</h1>
<h3>Current Balance: @Model.CurrentBalance.ToString("C")</h3>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <table class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Date</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model.Actions)
                    {
                        <tr>
                            <td>@a.ActionName</td>
                            <td>@a.Date.ToLongDateString()</td>
                            <td>@(a.ActionName.Contains("Contribution") ? '-' + ((@a.Amount).ToString("C")) : @a.Amount.ToString("C"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div style="text-align:center;" class="mt-5">
    <a href="/contributors" class="btn btn-primary">Back To Contributors</a>
</div>

